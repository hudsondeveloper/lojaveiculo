@model LojaVeiculos.Models.Proprietario
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
</head>

<body>
    <div class="myform">
        <h1 class="display-4">Atualizar Proprietario</h1>

        <form asp-controller="Proprietario" asp-action="Update" method="post">
            <input asp-for="Id" name="Id" value="@Model.Id" type="hidden" />

            <div class="">
                <label asp-for="Nome" class="">Nome:</label>
                <input asp-for="Nome" placeholder="Nome" name="Nome" required value="@Model.Nome" />
            </div>
            <br>
            <div class="">
                <label asp-for="Documento" class="">Documento:</label>
                <input asp-for="Documento" placeholder="Documento" name="Documento" required value="@Model.Documento"
                    onblur="formata_cpf_cnpj(this.value)" />
            </div>
            <br>
            <div class="">
                <label asp-for="Email" class="">Email:</label>
                <input asp-for="Email" placeholder="Email" name="Email" required
                    onblur="validateEmail(this.value) == false?alert('Email Inválido'):true" value="@Model.Email" />
            </div>
            <br>
            <div class="">
                <label asp-for="Cep" class="">Cep:</label>
                <input asp-for="Cep" placeholder="Cep" name="Cep" required onblur="getCep(this.value)" />
            </div>
            <br>
            <div class="">
                <label asp-for="Endereco" class="">Endereço:</label>
                <input asp-for="Endereco" placeholder="Endereço" name="Endereco" id="Endereco" required readonly
                    style="width: 80%;" value="@Model.Endereco" />
            </div>
            <br>
            <div class="">
                <label asp-for="Status" class="">Status:</label>
                <select asp-for="Status" asp-items="ViewBag.StatusProprietario" required></select>
            </div>

            <div>
                <p></p>
                <button type="submit">Atualizar</button>
                <p></p>
            </div>

        </form>
    </div>

</body>

</html>

<script>
    if ("@ViewBag.Validation") {
        alert("@ViewBag.Validation")
    }
</script>
